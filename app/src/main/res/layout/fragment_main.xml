<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/vaktin_cikmasina"
                android:textColor="@color/white"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/text_ezani_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/ezani_saat"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:drawableLeft="@drawable/logo"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/text_ezani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/ezani_saat"
                android:textColor="@color/white"
                android:textSize="65sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/main_content_bg"/>
            <TextView
                android:id="@+id/text_vaktin_cikmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/vaktin_cikmasina"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_kalan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="@string/vaktin_cikmasina"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/main_content_bg" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/main_content_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_miladi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/ezani_saat"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@id/text_hicri"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/text_hicri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/ezani_saat"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:alpha=".5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                <LinearLayout
                    android:id="@+id/vakitler_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="7.5dp">

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>